<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="标题"
        android:textColor="@color/ziti_normal" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="描述 "
        android:textColor="@color/ziti_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="发布人id"
            android:textColor="@color/ziti2" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="发布时间"
            android:textColor="@color/ziti2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/tupian_jiazaizhong" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/tupian_jiazaizhong"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/tupian_jiazaizhong"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/tupian_jiazaizhong"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:src="@drawable/tupian_jiazaizhong"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="发布人手机号"
            android:textColor="@color/ziti2" />

        <Button
            android:id="@+id/bt_tongguo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_kongxin_green"
            android:text="通过审核"
            android:textColor="@color/theme_green"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_kongxin_red"
            android:text="审核失败"
            android:textColor="@color/theme_red"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>