<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_pinglun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="你想说点什么"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="6"
            android:minHeight="44dp"
            android:textColor="@color/ziti_normal"
            android:textColorHint="@color/ziti2"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/iv_fasong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@drawable/send" />

            <TextView
                android:id="@+id/tv_comment_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="99/100"
                android:textColor="@color/ziti2"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/pinglun"
        android:layout_marginTop="50dp"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="both" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/header"
                layout="@layout/header_goods" />

            <com.xiaomai.shopping.view.MyListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@null" />
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ziti2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/pinglun"
        android:background="@color/ziti2" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/pinglun"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/more" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pinglun"
        android:layout_toLeftOf="@id/more"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <FrameLayout
            android:id="@+id/want"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_red" />

            <ImageView
                android:id="@+id/iv_want"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/kongxin_heart_white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_yishoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="已收藏"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/phone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_green" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/phone_white" />
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_green" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/message" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/buy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_blue" />

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我要\n看货"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/buy" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>